<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>



    <style name="RatingBarTop" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark2</item>
        <item name="colorControlActivated">@color/colorStarTop</item>
    </style>

    <style name="RatingBarSub" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark2</item>
        <item name="colorControlActivated">@color/colorStarSub</item>
    </style>
</resources>
